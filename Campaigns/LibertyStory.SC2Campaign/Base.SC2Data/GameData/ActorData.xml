<?xml version="1.0" encoding="us-ascii"?>
<Catalog>
    <!--                                                                                         -->
    <!-- Battlecruiser ......................................................................... -->
    <!--                                                                                         -->
    <CActorUnit id="Battlecruiser">
        <DeathArray index="Normal" ModelLink="BattlecruiserDeathA" SoundLink=""/>
        <SoundArray index="Help" value="Battlecruiser_Help2"/>
    </CActorUnit>
    <CActorSound id="NydusWorm_Birth">
        <FogVisibility value="Hidden"/>
    </CActorSound>
    <CActorUnit id="Bunker">
        <On Terms="Upgrade.FortifiedBunkerCarapace.Add; ValidateUnit NotDeadOrConstruction" Send="ModelSwap JumboBunker"/>
        <On Terms="UnitBirth.Bunker; ValidatePlayer FortifiedNoShrike" Send="ModelSwap JumboBunker"/>
        <PlacementActorModel value="BunkerPlacementModelCampaign"/>
    </CActorUnit>
    <CActorModel id="BunkerPlacementModelCampaign" parent="PlacementModel">
        <On Terms="ActorCreation; ValidatePlayer FortifiedNoShrike; Option Model Low" Send="ModelSwap JumboBunker"/>
        <On Terms="ActorCreation; ValidatePlayer FortifiedNoShrike; !Option Model Low" Send="ModelSwap BunkerUpgradePlacement"/>
        <On Terms="ActorCreation; ValidatePlayer FortifiedAndShrike; Option Model Low" Send="ModelSwap JumboBunker"/>
        <On Terms="ActorCreation; ValidatePlayer FortifiedAndShrike; !Option Model Low" Send="ModelSwap BunkerShrikeUpgradePlacement"/>
        <!-- These arent needed, as these would result in the normal bunker placement model -->
<!--        <On Terms="ActorCreation; !ValidatePlayer NeosteelFramePurchased; !ValidatePlayer ShrikeTurretResearched; Option Model Low" Send="ModelSwap Bunker"/> -->
<!--        <On Terms="ActorCreation; !ValidatePlayer NeosteelFramePurchased; !ValidatePlayer ShrikeTurretResearched; !Option Model Low" Send="ModelSwap BunkerPlacement"/> -->
<!--        <On Terms="ActorCreation; !ValidatePlayer NeosteelFramePurchased; ValidatePlayer ShrikeTurretResearched; Option Model Low" Send="ModelSwap Bunker"/> -->
        <On Terms="ActorCreation; ValidatePlayer ShrikeNoFortified; !Option Model Low" Send="ModelSwap BunkerShrikePlacement"/>
    </CActorModel>
</Catalog>
